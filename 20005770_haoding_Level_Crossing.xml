			<source ref="id14"/>
			<target ref="id11"/>
			<label kind="guard" x="-408" y="-119">t &gt; descendTime</label>
			<label kind="synchronisation" x="-408" y="-102">barrierUp!</label>
		</transition>
		<transition>
			<source ref="id13"/>
			<target ref="id14"/>
